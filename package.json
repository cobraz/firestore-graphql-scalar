{
  "name": "firestore-graphql-scalars",
  "version": "2.0.0",
  "description": "Scalar types for Google Firestore.",
  "keywords": [
    "firebase",
    "firestore",
    "graphql",
    "graphql scalar",
    "graphql-scalars"
  ],
  "repository": "github:simenandre/firestore-graphql-scalars",
  "license": "MIT",
  "sideEffects": false,
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild": "yarn clean",
    "build": "bob build --single",
    "lint": "eslint --ext .ts \"./src/**/*.ts\"",
    "test": "jest --forceExit --no-watchman",
    "prepare-release": "yarn build && yarn test",
    "release": "yarn prepare-release && bob prepack && npm publish dist",
    "ci:release:canary": "node bump.js && bob prepack && npm publish dist --tag alpha --access public",
    "bundlesize": "yarn build && cd bundle-test/ && yarn && yarn test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{js,json,css,md,ts,tsx}": [
      "prettier --write",
      "git add -f"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "jest": {
    "roots": [
      "src"
    ]
  },
  "devDependencies": {
    "@google-cloud/firestore": "4.9.2",
    "@graphql-tools/merge": "6.2.7",
    "@graphql-tools/schema": "7.1.3",
    "@types/jest": "26.0.24",
    "@types/node": "13.13.41",
    "@typescript-eslint/eslint-plugin": "3.5.0",
    "@typescript-eslint/parser": "3.10.1",
    "bob-the-bundler": "1.1.0",
    "eslint": "7.18.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-config-standard": "16.0.2",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.3.1",
    "eslint-plugin-standard": "5.0.0",
    "graphql": "15.5.0",
    "husky": "4.3.7",
    "jest": "26.6.3",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "semver": "7.3.4",
    "ts-jest": "26.5.5",
    "typescript": "3.9.9"
  },
  "peerDependencies": {
    "@google-cloud/firestore": "3.x",
    "graphql": "^0.8.0 || ^0.9.0 || ^0.10.0 || ^0.11.0 || ^0.12.0 || ^0.13.0 || ^14.0.0 || ^15.0.0"
  },
  "engines": {
    "node": ">=10"
  },
  "typescript": {
    "definition": "dist/index.d.ts"
  }
}